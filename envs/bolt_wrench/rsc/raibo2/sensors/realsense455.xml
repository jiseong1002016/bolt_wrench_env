<?xml version="1.0" encoding="utf-8"?>

<sensor_set name="realsense_d435">
    <link>
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <mass value="0.072" />
            <inertia ixx="0.003881243" ixy="0.0" ixz="0.0" iyy="0.000498940" iyz="0.0" izz="0.003879257" />
        </inertial>
        <visual>
            <origin xyz="0 0 0" rpy="1.5707963 0 1.5707963" />
            <geometry>
                <mesh filename="d455.STL" scale="0.001 0.001 0.001"/>
            </geometry>
            <material name="">
                <color rgba="0.89804 0.91765 0.92941 1" />
            </material>
        </visual>
        <sensor name="color" type="rgb" update_rate="30">
            <origin rpy="0.0 0.0 0.0" xyz="-0.0043 -0.0115 0.00"/>
            <camera horizontal_fov="1.518">
                <image width="640" height="360"/>
                <clip near="0.1" far="100"/>
                <noise type="gaussian" mean="0.0" stddev="0.007"/>
            </camera>
        </sensor>

        <!-- when depth is aligned to color -->
        <sensor name="depth_aligned" type="depth" update_rate="30">
            <data type="coordinates"/>
            <origin rpy="0.0 0.0 0.0" xyz="-0.0043 -0.0115 0.00"/>
            <camera horizontal_fov="1.518">
                <image width="640" height="360"/>
                <clip near="0.1" far="10"/>
                <noise type="gaussian" mean="0.0" stddev="0.007"/>
            </camera>
        </sensor>

        <!-- when depth is not aligned to color -->
        <sensor name="depth" type="depth" update_rate="30">
            <data type="coordinates"/>
            <origin rpy="0.0 0.0 0.0" xyz="-0.0043 0.00 0.00"/>
            <camera horizontal_fov="1.518">
                <image width="640" height="360"/>
                <clip near="0.1" far="10"/>
                <noise type="gaussian" mean="0.0" stddev="0.007"/>
            </camera>
        </sensor>        
    </link>
</sensor_set>